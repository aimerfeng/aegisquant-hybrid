<UserControl x:Class="AegisQuant.UI.Controls.CandlestickChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:scottplot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1a1a2e">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        
        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="#0f3460" Padding="8,6" Margin="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <!-- 周期选择 -->
                <TextBlock Text="周期:" VerticalAlignment="Center" Foreground="#8892b0" FontSize="11" Margin="0,0,6,0"/>
                <ComboBox x:Name="PeriodComboBox" Width="70" FontSize="11" SelectedIndex="{Binding SelectedPeriodIndex}"
                          SelectionChanged="PeriodComboBox_SelectionChanged">
                    <ComboBoxItem Content="1分钟"/>
                    <ComboBoxItem Content="5分钟"/>
                    <ComboBoxItem Content="15分钟"/>
                    <ComboBoxItem Content="30分钟"/>
                    <ComboBoxItem Content="1小时"/>
                    <ComboBoxItem Content="日线"/>
                    <ComboBoxItem Content="周线"/>
                </ComboBox>
                
                <Rectangle Width="1" Fill="#2a2a4a" Margin="12,2"/>
                
                <!-- 均线选项 -->
                <TextBlock Text="均线:" VerticalAlignment="Center" Foreground="#8892b0" FontSize="11" Margin="0,0,6,0"/>
                <CheckBox x:Name="Ma5Check" Content="MA5" IsChecked="{Binding ShowMa5}" Foreground="#FFD700" 
                          FontSize="11" Margin="0,0,8,0" VerticalAlignment="Center" Click="IndicatorCheckBox_Click"/>
                <CheckBox x:Name="Ma10Check" Content="MA10" IsChecked="{Binding ShowMa10}" Foreground="#FF69B4" 
                          FontSize="11" Margin="0,0,8,0" VerticalAlignment="Center" Click="IndicatorCheckBox_Click"/>
                <CheckBox x:Name="Ma20Check" Content="MA20" IsChecked="{Binding ShowMa20}" Foreground="#00CED1" 
                          FontSize="11" Margin="0,0,8,0" VerticalAlignment="Center" Click="IndicatorCheckBox_Click"/>
                <CheckBox x:Name="Ma60Check" Content="MA60" IsChecked="{Binding ShowMa60}" Foreground="#9370DB" 
                          FontSize="11" Margin="0,0,12,0" VerticalAlignment="Center" Click="IndicatorCheckBox_Click"/>
                
                <Rectangle Width="1" Fill="#2a2a4a" Margin="0,2,12,2"/>
                
                <CheckBox x:Name="BollCheck" Content="BOLL" IsChecked="{Binding ShowBollinger}" Foreground="#4FC3F7" 
                          FontSize="11" Margin="0,0,12,0" VerticalAlignment="Center" Click="IndicatorCheckBox_Click"/>
                
                <CheckBox x:Name="TradeMarkersCheck" Content="买卖点" IsChecked="{Binding ShowTradeMarkers}" Foreground="#e6f1ff" 
                          FontSize="11" Margin="0,0,8,0" VerticalAlignment="Center" Click="IndicatorCheckBox_Click"/>
            </StackPanel>
        </Border>
        
        <!-- 时间导航工具栏 -->
        <Border Grid.Row="1" Background="#162447" Padding="8,4" Margin="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧：日期选择器和导航按钮 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- 跳转到最早 -->
                    <Button x:Name="GoToEarliestBtn" Content="⏮" ToolTip="跳转到最早" 
                            Width="28" Height="24" FontSize="12" Margin="0,0,4,0"
                            Background="#1f4068" Foreground="#8892b0" BorderThickness="0"
                            Click="GoToEarliest_Click" IsEnabled="{Binding HasData}"/>
                    
                    <!-- 向前翻页 -->
                    <Button x:Name="PageBackBtn" Content="◀" ToolTip="向前翻页" 
                            Width="28" Height="24" FontSize="10" Margin="0,0,8,0"
                            Background="#1f4068" Foreground="#8892b0" BorderThickness="0"
                            Click="PageBackward_Click" IsEnabled="{Binding HasData}"/>
                    
                    <!-- 日期选择器 -->
                    <TextBlock Text="日期:" VerticalAlignment="Center" Foreground="#8892b0" FontSize="11" Margin="0,0,6,0"/>
                    <DatePicker x:Name="DateSelector" Width="120" FontSize="11"
                                SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                                DisplayDateStart="{Binding DataStartDate}"
                                DisplayDateEnd="{Binding DataEndDate}"
                                IsEnabled="{Binding HasData}"
                                SelectedDateChanged="DateSelector_SelectedDateChanged"/>
                    
                    <!-- 向后翻页 -->
                    <Button x:Name="PageForwardBtn" Content="▶" ToolTip="向后翻页" 
                            Width="28" Height="24" FontSize="10" Margin="8,0,4,0"
                            Background="#1f4068" Foreground="#8892b0" BorderThickness="0"
                            Click="PageForward_Click" IsEnabled="{Binding HasData}"/>
                    
                    <!-- 跳转到最新 -->
                    <Button x:Name="GoToLatestBtn" Content="⏭" ToolTip="跳转到最新" 
                            Width="28" Height="24" FontSize="12" Margin="0,0,12,0"
                            Background="#1f4068" Foreground="#8892b0" BorderThickness="0"
                            Click="GoToLatest_Click" IsEnabled="{Binding HasData}"/>
                </StackPanel>
                
                <!-- 中间：时间滑块 -->
                <Grid Grid.Column="1" Margin="8,0">
                    <Slider x:Name="TimeSlider" 
                            Minimum="0" Maximum="100" 
                            Value="{Binding TimeSliderValue, Mode=TwoWay}"
                            IsEnabled="{Binding HasData}"
                            VerticalAlignment="Center"
                            ValueChanged="TimeSlider_ValueChanged"/>
                </Grid>
                
                <!-- 右侧：时间范围显示 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="TimeRangeDisplay" FontSize="10" Foreground="#8892b0" VerticalAlignment="Center">
                        <Run Text="{Binding ViewStartTime, StringFormat='{}{0:MM/dd HH:mm}'}"/>
                        <Run Text=" - "/>
                        <Run Text="{Binding ViewEndTime, StringFormat='{}{0:MM/dd HH:mm}'}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 主图: K线 -->
        <Border Grid.Row="2" BorderBrush="#2a2a4a" BorderThickness="0,0,0,1">
            <Grid>
                <scottplot:WpfPlot x:Name="MainChart"/>
                
                <!-- 十字光标信息面板 -->
                <Border x:Name="CrosshairInfo" Background="#1a1a2eE0" 
                        Padding="10,6" CornerRadius="4"
                        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                        Visibility="Collapsed" BorderBrush="#2a2a4a" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="CrosshairTime" FontSize="11" Foreground="#8892b0" FontWeight="Bold" Margin="0,0,12,0"/>
                        <TextBlock Text="开:" FontSize="10" Foreground="#8892b0"/>
                        <TextBlock x:Name="CrosshairOpen" FontSize="10" Foreground="#e6f1ff" Width="55" Margin="0,0,8,0"/>
                        <TextBlock Text="高:" FontSize="10" Foreground="#8892b0"/>
                        <TextBlock x:Name="CrosshairHigh" FontSize="10" Foreground="#ef5350" Width="55" Margin="0,0,8,0"/>
                        <TextBlock Text="低:" FontSize="10" Foreground="#8892b0"/>
                        <TextBlock x:Name="CrosshairLow" FontSize="10" Foreground="#26a69a" Width="55" Margin="0,0,8,0"/>
                        <TextBlock Text="收:" FontSize="10" Foreground="#8892b0"/>
                        <TextBlock x:Name="CrosshairClose" FontSize="10" Foreground="#e6f1ff" Width="55"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- 副图1: 成交量 -->
        <Border Grid.Row="3" BorderBrush="#2a2a4a" BorderThickness="0,0,0,1">
            <Grid>
                <scottplot:WpfPlot x:Name="VolumeChart"/>
                <TextBlock Text="VOL" FontSize="10" Foreground="#8892b0" FontWeight="Bold"
                           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,4"/>
            </Grid>
        </Border>
        
        <!-- 副图2: MACD -->
        <Border Grid.Row="4">
            <Grid>
                <scottplot:WpfPlot x:Name="MacdChart"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,4">
                    <TextBlock Text="MACD(12,26,9)" FontSize="10" Foreground="#8892b0" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Text="DIF" FontSize="9" Foreground="#FFD700" Margin="0,0,6,0"/>
                    <TextBlock Text="DEA" FontSize="9" Foreground="#00CED1" Margin="0,0,6,0"/>
                    <TextBlock Text="MACD" FontSize="9" Foreground="#ef5350"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
