<UserControl x:Class="AegisQuant.UI.Controls.StrategyListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="350"
             Background="{DynamicResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with buttons -->
        <Border Grid.Row="0" Background="{DynamicResource CardBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="策略列表" FontWeight="SemiBold" FontSize="14" 
                           Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="AddStrategyButton" Content="+" ToolTip="添加策略"
                            Width="28" Height="28" Margin="0,0,4,0"
                            Click="AddStrategyButton_Click"
                            Style="{DynamicResource PrimaryButtonStyle}"/>
                    <Button x:Name="NewStrategyButton" Content="✎" ToolTip="新建策略"
                            Width="28" Height="28"
                            Click="NewStrategyButton_Click"
                            Style="{DynamicResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Strategy List -->
        <ListBox x:Name="StrategyListBox" Grid.Row="1" 
                 Background="Transparent" BorderThickness="0"
                 ItemsSource="{Binding Strategies}"
                 SelectionChanged="StrategyListBox_SelectionChanged"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource CardBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" CornerRadius="4" 
                            Margin="4,2" Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Enable/Disable Toggle -->
                            <CheckBox Grid.Column="0" Grid.RowSpan="2" 
                                      IsChecked="{Binding IsEnabled}" 
                                      VerticalAlignment="Center" Margin="0,0,8,0"
                                      ToolTip="启用/禁用策略"/>
                            
                            <!-- Strategy Name and Type -->
                            <StackPanel Grid.Column="1" Grid.Row="0">
                                <TextBlock Text="{Binding Strategy.Name}" 
                                           FontWeight="SemiBold" FontSize="13"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}">
                                    <Run Text="{Binding Strategy.Type, Mode=OneWay}"/>
                                    <Run Text=" | "/>
                                    <Run Text="ID: "/>
                                    <Run Text="{Binding Id, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                            
                            <!-- Remove Button -->
                            <Button Grid.Column="2" Grid.Row="0" Content="✕" 
                                    Width="20" Height="20" FontSize="10"
                                    ToolTip="移除策略"
                                    Tag="{Binding Id}"
                                    Click="RemoveStrategyButton_Click"
                                    Style="{DynamicResource DangerButtonStyle}"/>
                            
                            <!-- Statistics Row -->
                            <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" 
                                        Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,12,0">
                                    <Run Text="信号: "/>
                                    <Run Text="{Binding SignalCount, Mode=OneWay}" FontWeight="SemiBold"/>
                                </TextBlock>
                                <TextBlock FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,12,0">
                                    <Run Text="交易: "/>
                                    <Run Text="{Binding TradeCount, Mode=OneWay}" FontWeight="SemiBold"/>
                                </TextBlock>
                                <TextBlock FontSize="10" Margin="0,0,12,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PnL, Converter={StaticResource IsPositiveConverter}}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PnL, Converter={StaticResource IsNegativeConverter}}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <Run Text="PnL: "/>
                                    <Run Text="{Binding PnL, StringFormat=F2, Mode=OneWay}" FontWeight="SemiBold"/>
                                </TextBlock>
                            </StackPanel>
                            
                            <!-- Status/Error Row -->
                            <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" 
                                       FontSize="10" Margin="0,2,0,0"
                                       TextTrimming="CharacterEllipsis"
                                       Visibility="{Binding LastError, Converter={StaticResource StringToVisibilityConverter}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="⚠ "/>
                                <Run Text="{Binding LastError, Mode=OneWay}"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Empty State -->
        <TextBlock x:Name="EmptyStateText" Grid.Row="1" 
                   Text="暂无策略&#x0a;点击 + 添加策略" 
                   TextAlignment="Center" 
                   Foreground="{DynamicResource SecondaryTextBrush}"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Visibility="Collapsed"/>
        
        <!-- Footer with aggregation mode -->
        <Border Grid.Row="2" Background="{DynamicResource CardBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="信号聚合:" VerticalAlignment="Center" 
                           Foreground="{DynamicResource SecondaryTextBrush}" FontSize="11"/>
                
                <ComboBox x:Name="AggregationModeComboBox" Grid.Column="1" 
                          Margin="8,0,0,0" FontSize="11"
                          SelectionChanged="AggregationModeComboBox_SelectionChanged">
                    <ComboBoxItem Content="首个信号" Tag="FirstSignal"/>
                    <ComboBoxItem Content="多数投票" Tag="MajorityVote"/>
                    <ComboBoxItem Content="一致同意" Tag="Unanimous"/>
                    <ComboBoxItem Content="加权投票" Tag="WeightedVote"/>
                    <ComboBoxItem Content="独立执行" Tag="Independent"/>
                </ComboBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
