<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock">
    
    <!-- AvalonDock 暗色主题样式 -->
    
    <!-- 文档面板标题样式 -->
    <Style TargetType="{x:Type avalonDock:LayoutDocumentPaneControl}">
        <Setter Property="Background" Value="#1E1E1E"/>
    </Style>
    
    <!-- 可停靠面板标题样式 -->
    <Style TargetType="{x:Type avalonDock:LayoutAnchorablePaneControl}">
        <Setter Property="Background" Value="#1E1E1E"/>
    </Style>
    
    <!-- 面板组标题栏样式 -->
    <Style x:Key="DarkAnchorablePaneTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#A0A0A0"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="4,2"/>
    </Style>
    
    <!-- 标签页样式 -->
    <Style x:Key="DarkDocumentTabItem" TargetType="TabItem">
        <Setter Property="Background" Value="#252525"/>
        <Setter Property="Foreground" Value="#A0A0A0"/>
        <Setter Property="BorderBrush" Value="#333333"/>
        <Setter Property="Padding" Value="8,4"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#1E1E1E"/>
                <Setter Property="Foreground" Value="#E0E0E0"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#2D2D2D"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- 分隔条样式 -->
    <Style x:Key="DarkResizingPanel" TargetType="GridSplitter">
        <Setter Property="Background" Value="#333333"/>
        <Setter Property="Width" Value="4"/>
        <Setter Property="Height" Value="4"/>
    </Style>
    
</ResourceDictionary>
