<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========== 背景色 ========== -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="CardColor">#252525</Color>
    <Color x:Key="BorderColor">#333333</Color>
    <Color x:Key="HoverColor">#2D2D2D</Color>
    <Color x:Key="SelectedColor">#3D3D3D</Color>
    
    <!-- ========== 文字色 ========== -->
    <Color x:Key="PrimaryTextColor">#E0E0E0</Color>
    <Color x:Key="SecondaryTextColor">#A0A0A0</Color>
    <Color x:Key="DisabledTextColor">#606060</Color>
    <Color x:Key="AccentTextColor">#64B5F6</Color>
    
    <!-- ========== A 股配色 (红涨绿跌) ========== -->
    <Color x:Key="UpColor">#FF3333</Color>
    <Color x:Key="DownColor">#00CC00</Color>
    <Color x:Key="FlatColor">#AAAAAA</Color>
    
    <!-- 买卖盘颜色 (A股: 红买绿卖) -->
    <Color x:Key="BidColor">#FF3333</Color>
    <Color x:Key="AskColor">#00CC00</Color>
    
    <!-- ========== SolidColorBrush 资源 ========== -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="{StaticResource SelectedColor}"/>
    
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="{StaticResource AccentTextColor}"/>
    
    <SolidColorBrush x:Key="UpBrush" Color="{StaticResource UpColor}"/>
    <SolidColorBrush x:Key="DownBrush" Color="{StaticResource DownColor}"/>
    <SolidColorBrush x:Key="FlatBrush" Color="{StaticResource FlatColor}"/>
    <SolidColorBrush x:Key="BidBrush" Color="{StaticResource BidColor}"/>
    <SolidColorBrush x:Key="AskBrush" Color="{StaticResource AskColor}"/>
    
    <!-- ========== 高密度控件样式 ========== -->
    
    <!-- 紧凑文本块 -->
    <Style x:Key="DenseTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="Consolas, Microsoft YaHei UI"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <!-- 价格文本块 -->
    <Style x:Key="PriceTextBlock" TargetType="TextBlock" BasedOn="{StaticResource DenseTextBlock}">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
    <!-- 大号价格文本块 -->
    <Style x:Key="LargePriceTextBlock" TargetType="TextBlock" BasedOn="{StaticResource PriceTextBlock}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <!-- 紧凑按钮 -->
    <Style x:Key="CompactButton" TargetType="Button">
        <Setter Property="Padding" Value="8,2"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource SelectedBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- 危险按钮 (紧急停止等) -->
    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource CompactButton}">
        <Setter Property="Background" Value="#4A1515"/>
        <Setter Property="BorderBrush" Value="#FF3333"/>
        <Setter Property="Foreground" Value="#FF3333"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#5A2020"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- 高密度 DataGrid -->
    <Style x:Key="DenseDataGrid" TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RowHeight" Value="20"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="Consolas, Microsoft YaHei UI"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="RowBackground" Value="Transparent"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource CardBrush}"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
    </Style>
    
    <!-- DataGrid 列头样式 -->
    <Style x:Key="DenseDataGridColumnHeader" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
    </Style>
    
    <!-- 高密度 ListView -->
    <Style x:Key="DenseListView" TargetType="ListView">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="Consolas, Microsoft YaHei UI"/>
    </Style>
    
    <!-- 紧凑 TextBox -->
    <Style x:Key="DenseTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="Consolas, Microsoft YaHei UI"/>
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <!-- 紧凑 ComboBox -->
    <Style x:Key="DenseComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>
    
    <!-- 面板标题 -->
    <Style x:Key="PanelHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
    
    <!-- 卡片边框 -->
    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8"/>
    </Style>
    
    <!-- 状态栏样式 -->
    <Style x:Key="DarkStatusBar" TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>
    
    <!-- 工具栏样式 -->
    <Style x:Key="DarkToolBar" TargetType="ToolBar">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <!-- 分隔线 -->
    <Style x:Key="DarkSeparator" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Margin" Value="4,2"/>
    </Style>
    
    <!-- 滚动条样式 (暗色) -->
    <Style x:Key="DarkScrollBar" TargetType="ScrollBar">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    </Style>
    
</ResourceDictionary>
