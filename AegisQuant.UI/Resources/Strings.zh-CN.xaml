<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <!-- Window Title -->
    <system:String x:Key="AppTitle">AegisQuant - 量化回测系统</system:String>
    
    <!-- Toolbar -->
    <system:String x:Key="LoadData">加载数据</system:String>
    <system:String x:Key="Start">开始</system:String>
    <system:String x:Key="Stop">停止</system:String>
    <system:String x:Key="Optimize">优化</system:String>
    <system:String x:Key="Progress">进度:</system:String>
    <system:String x:Key="Settings">设置</system:String>
    
    <!-- Strategy Parameters -->
    <system:String x:Key="StrategyParameters">策略参数</system:String>
    <system:String x:Key="ShortMaPeriod">短期均线周期:</system:String>
    <system:String x:Key="LongMaPeriod">长期均线周期:</system:String>
    <system:String x:Key="PositionSize">仓位大小:</system:String>
    <system:String x:Key="StopLossPct">止损比例 %:</system:String>
    <system:String x:Key="TakeProfitPct">止盈比例 %:</system:String>
    
    <!-- Risk Configuration -->
    <system:String x:Key="RiskConfiguration">风控配置</system:String>
    <system:String x:Key="MaxOrderRate">最大下单频率:</system:String>
    <system:String x:Key="MaxPosition">最大持仓:</system:String>
    <system:String x:Key="MaxOrderValue">最大订单金额:</system:String>
    <system:String x:Key="MaxDrawdownPct">最大回撤 %:</system:String>
    
    <!-- Data Information -->
    <system:String x:Key="DataInformation">数据信息</system:String>
    <system:String x:Key="TotalTicks">总Tick数:</system:String>
    <system:String x:Key="ValidTicks">有效Tick:</system:String>
    <system:String x:Key="InvalidTicks">无效Tick:</system:String>
    <system:String x:Key="AnomalyTicks">异常Tick:</system:String>
    
    <!-- Chart -->
    <system:String x:Key="ChartPlaceholder">加载数据并运行回测以查看净值曲线</system:String>
    
    <!-- Metrics -->
    <system:String x:Key="Balance">账户余额</system:String>
    <system:String x:Key="Equity">净值</system:String>
    <system:String x:Key="TotalReturn">总收益</system:String>
    <system:String x:Key="MaxDrawdown">最大回撤</system:String>
    <system:String x:Key="Positions">持仓数</system:String>
    
    <!-- Log -->
    <system:String x:Key="Log">日志</system:String>
    <system:String x:Key="Clear">清空</system:String>
    <system:String x:Key="Export">导出</system:String>
    
    <!-- Status Bar -->
    <system:String x:Key="Running">运行中:</system:String>
    
    <!-- Settings Dialog -->
    <system:String x:Key="SettingsTitle">设置</system:String>
    <system:String x:Key="Language">语言:</system:String>
    <system:String x:Key="English">English</system:String>
    <system:String x:Key="Chinese">中文</system:String>
    <system:String x:Key="OK">确定</system:String>
    <system:String x:Key="Cancel">取消</system:String>
    
    <!-- Tooltips -->
    <system:String x:Key="LoadDataTooltip">加载数据文件</system:String>
    <system:String x:Key="StartTooltip">开始回测</system:String>
    <system:String x:Key="StopTooltip">停止回测</system:String>
    <system:String x:Key="OptimizeTooltip">参数优化</system:String>
    <system:String x:Key="SettingsTooltip">应用设置</system:String>
    
    <!-- Optimization Window -->
    <system:String x:Key="OptimizationTitle">参数优化</system:String>
    <system:String x:Key="ParameterRanges">参数范围</system:String>
    <system:String x:Key="ShortMaRange">短期均线范围:</system:String>
    <system:String x:Key="LongMaRange">长期均线范围:</system:String>
    <system:String x:Key="From">起始:</system:String>
    <system:String x:Key="To">结束:</system:String>
    <system:String x:Key="Step">步长:</system:String>
    <system:String x:Key="StartOptimization">开始优化</system:String>
    <system:String x:Key="StopOptimization">停止</system:String>
    <system:String x:Key="Results">结果</system:String>
    <system:String x:Key="ShortMA">短期MA</system:String>
    <system:String x:Key="LongMA">长期MA</system:String>
    <system:String x:Key="SharpeRatio">夏普比率</system:String>
    <system:String x:Key="TotalReturnPct">收益率 %</system:String>
    <system:String x:Key="MaxDrawdownPct">回撤 %</system:String>
    <system:String x:Key="Trades">交易次数</system:String>
    
</ResourceDictionary>
