<Window x:Class="AegisQuant.UI.Views.StrategyLoaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource String.Strategy.LoadStrategy}"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    
    <Window.Resources>
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SelectedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16" Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{DynamicResource String.Strategy.LoadStrategy}" 
                       FontSize="20" FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Text="{DynamicResource String.Strategy.LoadStrategyDescription}" 
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- File Selection and Preview -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: File Selection -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{DynamicResource String.Strategy.SelectFile}"
                               FontWeight="SemiBold" Margin="0,0,0,8"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>

                    <!-- File Path -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="FilePathTextBox" 
                                 IsReadOnly="True"
                                 Padding="8,6"
                                 Background="{DynamicResource CardBrush}"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 CaretBrush="{DynamicResource PrimaryTextBrush}"/>
                        <Button Grid.Column="1" Content="{DynamicResource String.Browse}"
                                Style="{StaticResource DarkButton}"
                                Margin="8,0,0,0" Padding="12,6"
                                Click="BrowseButton_Click"/>
                    </Grid>

                    <!-- Recent Strategies -->
                    <TextBlock Grid.Row="2" Text="{DynamicResource String.Strategy.RecentStrategies}"
                               FontWeight="SemiBold" Margin="0,0,0,8"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>

                    <ListBox x:Name="RecentStrategiesListBox" Grid.Row="3"
                             Background="Transparent"
                             BorderThickness="0"
                             SelectionChanged="RecentStrategiesListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="4">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <TextBlock Text="{Binding FilePath}" FontSize="11"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Right: Strategy Preview -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="4">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{DynamicResource String.Strategy.Preview}"
                               FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="PreviewPanel" Visibility="Collapsed">
                            <!-- Strategy Name -->
                            <TextBlock Text="{DynamicResource String.Strategy.Name}" 
                                       FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock x:Name="StrategyNameText" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,2,0,12"/>

                            <!-- Strategy Type -->
                            <TextBlock Text="{DynamicResource String.Strategy.Type}" 
                                       FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock x:Name="StrategyTypeText" 
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,2,0,12"/>

                            <!-- Description -->
                            <TextBlock Text="{DynamicResource String.Strategy.Description}" 
                                       FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock x:Name="StrategyDescriptionText" TextWrapping="Wrap"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,2,0,12"/>

                            <!-- Parameters -->
                            <TextBlock Text="{DynamicResource String.Strategy.Parameters}" 
                                       FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <ItemsControl x:Name="ParametersItemsControl" Margin="0,4,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Key}" 
                                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Value}"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- No Preview Message -->
                    <TextBlock x:Name="NoPreviewText" Grid.Row="1"
                               Text="{DynamicResource String.Strategy.SelectFileToPreview}"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Error Message -->
        <Border x:Name="ErrorBorder" Grid.Row="2" Margin="0,12,0,0"
                Background="#33FF0000" BorderBrush="#FF0000" BorderThickness="1"
                CornerRadius="4" Padding="12,8" Visibility="Collapsed">
            <TextBlock x:Name="ErrorText" Foreground="#FF0000" TextWrapping="Wrap"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="{DynamicResource String.Cancel}" 
                    Style="{StaticResource DarkButton}"
                    Padding="20,8" Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="LoadButton" Content="{DynamicResource String.Strategy.Load}" 
                    Style="{StaticResource AccentButton}"
                    Padding="20,8" IsEnabled="False"
                    Click="LoadButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
