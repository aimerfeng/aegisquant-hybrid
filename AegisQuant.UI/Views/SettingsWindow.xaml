<Window x:Class="AegisQuant.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource SettingsTitle}"
        Height="200" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- ComboBox 下拉项样式 -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SelectedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Language Selection -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="{DynamicResource Language}"
                       FontWeight="Bold" FontSize="14" Margin="0,0,0,8"
                       Foreground="{DynamicResource PrimaryTextBrush}"/>

            <ComboBox x:Name="LanguageComboBox"
                      Width="200" HorizontalAlignment="Left"
                      SelectionChanged="LanguageComboBox_SelectionChanged"
                      Background="{DynamicResource CardBrush}" 
                      Foreground="{DynamicResource PrimaryTextBrush}"
                      BorderBrush="{DynamicResource BorderBrush}">
                <ComboBox.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#252526"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#094771"/>
                </ComboBox.Resources>
                <ComboBoxItem Tag="en-US">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="English" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem Tag="zh-CN">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="中文 (简体)" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{DynamicResource OK}"
                    Width="80" Padding="8,4" Margin="0,0,8,0"
                    Click="OkButton_Click" IsDefault="True"
                    Background="{DynamicResource AccentBrush}" Foreground="White"/>
            <Button Content="{DynamicResource Cancel}"
                    Width="80" Padding="8,4"
                    Click="CancelButton_Click" IsCancel="True"
                    Background="{DynamicResource CardBrush}" Foreground="{DynamicResource PrimaryTextBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"/>
        </StackPanel>
    </Grid>
</Window>