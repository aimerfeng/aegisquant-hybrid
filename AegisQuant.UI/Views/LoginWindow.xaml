<Window x:Class="AegisQuant.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AegisQuant 登录" Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#1E3A5F" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="AegisQuant" FontSize="28" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="量化交易系统" FontSize="14" 
                           Foreground="#B0C4DE" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 登录表单 -->
        <Border Grid.Row="1" Padding="30">
            <StackPanel VerticalAlignment="Center">
                <!-- 用户名 -->
                <TextBlock Text="用户名" Margin="0,0,0,4"/>
                <TextBox x:Name="UsernameTextBox" Padding="8" FontSize="14" Margin="0,0,0,16"/>
                
                <!-- 密码 -->
                <TextBlock Text="密码" Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox" Padding="8" FontSize="14" Margin="0,0,0,8"/>
                
                <!-- 记住我 -->
                <CheckBox x:Name="RememberMeCheckBox" Content="记住我" Margin="0,0,0,16"/>
                
                <!-- 错误信息 -->
                <TextBlock x:Name="ErrorText" Foreground="Red" TextWrapping="Wrap" 
                           Margin="0,0,0,16" Visibility="Collapsed"/>
                
                <!-- 锁定信息 -->
                <TextBlock x:Name="LockoutText" Foreground="Orange" TextWrapping="Wrap" 
                           Margin="0,0,0,16" Visibility="Collapsed"/>
                
                <!-- 登录按钮 -->
                <Button x:Name="LoginButton" Content="登录" 
                        Background="#1E3A5F" Foreground="White"
                        FontSize="14" FontWeight="Bold"
                        Padding="16,10" Margin="0,8,0,0"
                        Click="LoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
